enum Distribution {
  // Each check triggers 1 random region
  RANDOM

  // Each check triggers all selected regions
  ALL
}

// AuditLog for endpoints
// who changed what when
model EndpointAuditLog {
  id String @id

  endpoint   Endpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)
  endpointId String
  // The user who changed anything
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     String?
  message    String

  time DateTime @default(now())

  @@index([endpointId])
  @@index([userId])
}

model Endpoint {
  id        String    @id
  method    Method
  name      String
  teamId    String
  team      Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  url       String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  // When the user deletes an endpoint it is marked as deleted by setting this field
  deletedAt DateTime?

  followRedirects Boolean

  // Should we send one request to warm up the endpoint before starting the checks?
  prewarm Boolean? @default(false)

  // How many times should we run the check while reusing the connection
  runs Int? @default(1)

  // Mark a user as responsible for this endpoint
  // This is useful when you want to delete endpoints but don't know who still needs them
  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String?

  auditLog EndpointAuditLog[]

  // Interval in milliseconds
  interval      Int
  active        Boolean
  // Milliseconds
  degradedAfter Int?

  // Timeout after which we cancel the request
  // This counts as a failed request
  timeout      Int?
  distribution Distribution
  regions      Region[]
  // json encoded map
  // { KEY: VALUE}
  headers      Json?
  body         String?      @db.Text

  assertions String? @db.Text

  pages StatusPage[]

  alerts Alert[]

  @@index([teamId])
  @@index([ownerId])
}

model Check {
  id         String @id
  endpointId String

  body     String?  @db.Text
  header   Json?
  status   Int?
  latency  Int?
  regionId String
  teamId   String
  time     DateTime
  error    String?
  timing   Json?

  @@index([endpointId])
}

model VerificationRequest {
  // usually email
  identifier String
  otp        String
  expires    DateTime

  createdAt DateTime @default(now())

  @@unique([identifier, otp])
}

model StatusPage {
  id        String     @id
  slug      String     @unique
  name      String
  endpoints Endpoint[]
  teamId    String
  team      Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
}

model Alert {
  id     String @id
  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  active                       Boolean
  addNewEndpointsAutomatically Boolean

  // this alert is listening to the following endpoints
  endpoints Endpoint[]

  emailChannels   EmailChannel[]
  webhookChannels WebhookChannel[]

  @@index([teamId])
}

model EmailChannel {
  id String @id

  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId String

  alerts Alert[]

  email  String
  active Boolean

  @@unique([teamId, email])
  @@index([teamId])
}

model WebhookChannel {
  id String @id

  alert   Alert  @relation(fields: [alertId], references: [id], onDelete: Cascade)
  alertId String

  url     String
  method  String
  headers Json?
  active  Boolean

  @@index([alertId])
}
