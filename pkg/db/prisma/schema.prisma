datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  shadowDatabaseUrl    = env("SHADOW_DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

enum Action {
  READ
  WRITE
}

model Token {
  id    String @id
  token String @unique

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  expires DateTime

  endpoints Action?
}

enum Method {
  GET
  POST
  PUT
  DELETE
}

enum Platform {
  VERCEL
}

model Region {
  id       String   @id
  name     String
  platform Platform
  region   String

  url String @unique

  endpoints Endpoint[]
  Check     Check[]

  @@unique([platform, region])
}

