VERSION 1

NODE checks_by_endpoint_24h_0
SQL >

    %
    SELECT *
    FROM checks__v2
    WHERE
        endpointId = {{ String(endpointId, required=True) }}
        AND time >= now64() - INTERVAL 1 DAY
        {% if defined(regionId) %}
            AND regionId = {{ String(regionId, required=False) }}
        {% end %}


